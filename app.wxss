/**app.wxss**/
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.color-orange{
  color: #FFAC17;
}
.text-bold{
  font-weight: bold;
}
.line-through{
  text-decoration: line-through;
}
.round-container{
  background-color: white;
  border-radius: 10px;
}
.text-gray{
  color:#888888;
  font-size: 15px;
  font-weight: lighter;
}
.gray-bg{
  background: #F6F7F9;
}

.float-right{
  float: right;
}
.float-left{
  float: left;
}
.flex-match-parent{
  width: 100%;
  display: flex;
}

.relative{
  position: relative;
}
.absolute{
  position: absolute;
}
.inline-block{
  display:inline-block ;
}
.over-hidden{
  overflow: hidden;
}
.clr {
  zoom: 1;
}

.icon_arrow_r {
  content: " ";
  display: inline-block;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  position: relative;
  top: -1rpx;
  top: -1rpx;
  margin-left: 10rpx;

}
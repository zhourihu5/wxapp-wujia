@import "colorui/main.wxss";
@import "colorui/icon.wxss";

.scrollPage {
  height: 100vh;
}
/**app.wxss**/
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /*justify-content: space-between;*/
  box-sizing: border-box;
  overflow: scroll;
  position: fixed;
}
.container-gray-bg-padding {
  position: fixed;
  overflow: scroll;
  width: 100%;
  height: 100%;
  padding: 0 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
  /*justify-content: space-between;*/
  box-sizing: border-box;
  background-color: #F6F7F9;
}

.goods-info{
  box-sizing: border-box;
  width: 100%;
  background-color: white;
  border-radius: 10px;
  padding: 0 10px;
  margin-bottom: 10px;
}
.goods-title{
  padding: 15px 0;
  border-bottom: 1px #cccccc solid;
}
.order-info-item{
  margin-top: 15px;
}
.lable{
  background-color: #F7F7F7;
  border-radius: 3px;
  padding:  3px 6px ;
  font-size: 10px;
  margin-right: 11px;
}
.activity-title{
  margin-top: 11px;
  font-size:16px;
  font-weight: bold;
  overflow: hidden;/*隐藏溢出*/
  text-overflow: ellipsis;/*显示省略符号来代表被修剪的文本*/
  white-space: nowrap;/*强制文字不换行*/
}
.margin-left-activity-title{
  margin-left: 10px;
}
.bottom-button{
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FF951C;
  color: white;
  position: fixed;
  font-size: 20px;
  letter-spacing:2px;
  width: 100%;
  height: 49px;
  bottom: 0 ;
  z-index: 10000;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.color-orange{
  color: #FFAC17;
  -webkit-text-fill-color:#FFAC17 ;
}
.bg-orange{
  background: #FFAC17;

}
.flex-1{
  flex: 1;
}
.center{
  align-items: center;
  justify-content: center;
  text-align: center;
}
.no-border{
  border: none !important;
}
.border-bottom{
  border-bottom: 1px #cccccc solid;
}
.t-gray-small{
  font-size: 12px;
  -webkit-text-fill-color: #cccccc;
  color: #cccccc;
}
.line{
  height: 1px;
  background: #cccccc;
}

.text-bold{
  font-weight: bold;
}
.line-through{
  text-decoration: line-through;
}
.round-container{
  background-color: white;
  border-radius: 10px;
}
.text-gray{
  color:#888888;
  font-size: 15px;
  font-weight: lighter;
}
.gray-bg{
  background: #F6F7F9;
}

.float-right{
  float: right;
}
.float-left{
  float: left;
}
.flex-match-parent{
  width: 100%;
  display: flex;
  box-sizing: border-box;

}
.match-parent{
  width: 100%;
  box-sizing: border-box;
}

.relative{
  position: relative;
}
.absolute{
  position: absolute;
}
.inline-block{
  display:inline-block ;
}
.over-hidden{
  overflow: hidden;
}
.clr {
  zoom: 1;
}

.icon_arrow_r {
  content: " ";
  display: inline-block;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  position: relative;
  top: -1rpx;
  top: -1rpx;
  margin-left: 10rpx;

}


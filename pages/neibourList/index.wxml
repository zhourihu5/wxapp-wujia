<!--index.wxml-->
<cu-custom bgColor="titlebar-white" isBack="{{true}}">
    <view slot="backText"></view>
    <view slot="content">小区列表</view>
</cu-custom>
<view class="search-container">
    <view class="item-1">
        <view class="flex align-center h-p-100" bindtap="showModal">
            <view class="item-1-l">{{currentArea?currentArea:'请选择'}}</view>
            <view class="cuIcon-triangledownfill sjx"></view>
            <view class="v-line"></view>
        </view>
        <input class="input" placeholder-class="placeholder" placeholder="南十里居"
               confirm-type="search" bindconfirm="search"/>
    </view>
</view>

<scroll-view  scroll-y class="body" style="top: calc( 108rpx + {{CustomBar}}px );"
             lower-threshold="{{lowerThreshold}}"
             upper-threshold="0"
             bindscrolltoupper='scrolltoupper'
             bindscrolltolower='scrolltolower'
>
    <view class="w-c">
        <block wx:for="{{apiSearchData}}" wx:key="">
            <navigator class="item-2 {{index==0?'no-border':''}}" url="/pages/applySubmit/index?id={{item.id}}"
                       hover-class="navigator-hover"
                       open-type="navigateTo">
                <!--        <view class="item-2 border-bottom">-->
                <image wx:if="{{false}}" class="image" src="/images/tab_my.png"/>
                <view class="item2-c">
                    <view class="n-name">{{item.name}}</view>
                    <view class="n-geo">{{item.address}}</view>
                </view>
                <view class="cuIcon-right arrow"></view>
                <!--        </view>-->
            </navigator>
        </block>
    </view>
    <view wx:if="{{apiSearchData}}" class="cu-load wj-loading {{isLoadingSearch?'loading':'over'}}"></view>
</scroll-view>
<view class="cu-modal bottom-modal {{modalName=='bottomModal'?'show':''}}">
    <view class="cu-dialog bottom-dialog">
        <view class="cu-bar d-t-bar">
            <view class="psz">请选择地区</view>
            <view class="cuIcon-close" bindtap="hideModal"></view>
        </view>
        <view>
            <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{pickerValue}}" bindchange="pickerChange">
                <picker-view-column>
                    <view wx:for="{{apiAreaData}}" style="line-height: 50px">{{item.areaName}}</view>
                </picker-view-column>
                <picker-view-column>
                    <view wx:for="{{apiAreaData[ pickerValue[0] ]}}" style="line-height: 50px">{{item.areaName}}</view>
                </picker-view-column>
                <picker-view-column>
                    <view wx:for="{{apiAreaData[ pickerValue[0] ][ pickerValue[1] ]}}" style="line-height: 50px">{{item.areaName}}</view>
                </picker-view-column>
            </picker-view>
        </view>
    </view>
</view>



<!--index.wxml-->
<view class="container">
    <view class="top-container flex-match-parent">
        <view class="flex-match-parent">
            <view class="top-left-text">
                <view class="username">周日虎</view>
                <view class="tel">13683218402</view>
            </view>
            <image class="image" src="/images/tab/img_doctor.png"/>
        </view>

    </view>

    <block wx:for="{{items}}" wx:for-item="item" >
        <navigator class="item-container" url="{{item.url}}" hover-class="navigator-hover"
                   open-type="navigateTo">
            <view class="item">
                <image class="icon" src="{{item.icon}}"/>
                <view class="item-text">{{item.title}}</view>
                <view class="icon_arrow_r ar"></view>

            </view>
            <view wx:if="{{index!=2}}" class="line"></view>
        </navigator>
    </block>
</view>

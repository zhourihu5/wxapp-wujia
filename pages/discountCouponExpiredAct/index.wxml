                <view class="r-c">
                    <view class="t-corner"></view>
                    <view class="v-line"></view>
                    <view class="b-corner"></view>
                </view>
            </view>
            <view class="i-c-l" style="z-index: 2">
                <view class="flex-1"></view>
                <view>
                    <text class="dollor">￥</text>

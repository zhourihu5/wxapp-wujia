/**index.wxss**/
page{
    height: 100%;
    background-color: var(--white);
}

.top-title {
  width: 100%;
  height: 60px;
}
.top-title .icon {
  width: 13px;
  height: 17px;
}

.top-title .text-white {
  padding-left: 5px;
}

.text-underline{
    text-decoration: underline;
}
.activity-more {
  width: 100%;
  border-radius: 8px 8px 0 0;
  background-color: var(--white);
  margin-top: -5px;
}
.activity-scroll{
    white-space: nowrap;/*不放这个不能横排*/
}
.activity-container{
    padding-left: 10px;
    padding-right: 10px;
    
    
}
.activity-list{
    border-radius: 16px;
    box-shadow:0px 2px 10px 0px rgba(228,228,228,0.5);
    margin: 5px 8px 5px 8px;
    display: inline-block;/*不放这个不能横排*/
    width: 568rpx;
    height: 540rpx;
}
.activity-banner{
    width: 568rpx;
    height: 284rpx;
    border-radius: 10px 10px 0 0;
    display: block;
}

.price{
    color: #FFAC17;
}
.dollar{
    font-size: 14px;
}
.price-integer{
    font-size: 18px;
    color: #FFAC17;
}
.price-float{
    font-size: 10px;
    color: #FFAC17;
}
.flex{
    display: flex;/*横向布局*/
}
.price-old{
    color: #000;
    font-size: 14px;
    margin-left: 5px;
    overflow: hidden;/*隐藏溢出*/
    text-overflow: ellipsis;/*显示省略符号来代表被修剪的文本*/
    white-space: nowrap;/*强制文字不换行*/
    text-decoration: line-through;
}

.sell-num{
    font-size: 12px;
}
.go-group-buy{
    background-color: #FE8631;
    width: 76px;
    height: 30px;
    color: white;
    border-radius: 15px;
    -webkit-text-fill-color: white;
    font-size: 14px;
    font-weight: lighter;
    float: right;
    margin-right: 10px;
    margin-bottom: 15px;
    display: flex;
    text-align: center;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    -webkit-box-align: center;
    vertical-align:middle;
    /*padding-top: 8px;*/
    /*position: relative;*/
}
.round-backgroud{
  width:750rpx;
  height:410rpx;
  box-shadow:0px -2px 20px 0px rgba(228,228,228,0.5);
  position: fixed;
  bottom: 0px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50% 50% 0 0;
}
.open-door{
    width: 120px;
    height: 120px;
    border-radius: 50%;
    text-align: center;
    line-height: 120px;
}

.text-white {
    color: white;
}


.float-right {
    float: right;
}

.activity-title {
  margin-top: 22px;
}



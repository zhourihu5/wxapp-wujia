<!--index.wxml-->
<cu-custom bgColor="bg-gradual-orange" isBack="{{false}}"><view slot="backText">返回</view><view slot="content">图标</view></cu-custom>
<view class="container over-hidden" style="background: #FAFAFA">

    <view class="top-title bg-gradual-orange flex padding justify-between">
      <view class="flex align-center"><image class="icon" src="/images/index_pos.png"></image><text class="location-text">天通苑社区</text></view>
      <view class="flex align-center"><text class="margin-right text-underline invite-visitor">邀请访客</text></view>
    </view>
    <view class="activity-more flex padding justify-between">
        <view class="jxhd">精选活动</view>
        <view>
            <text class="more">更多</text>
            <text class="cuIcon-right lg text-gray"></text>
        </view>
    </view>

    <scroll-view class="activity-scroll" scroll-x="true">
        <view class="activity-container">
            <block wx:for="{{list}}" wx:key="">
                <view class="activity-list">
                    <image class="activity-banner" src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg"/>
                    <view class="m-l-20 activity-title">这里是活动标题，只有十六个字</view>
                    <view class="price">
                        <text class="dollar margin-left-activity-title">￥</text>
                        <text class="price-integer">12.</text>
                        <text class="price-float">32</text>
                        <text class="price-old">￥16.68</text>
                    </view>
                    <view class="m-l-20 lable-container">
                        <text class="lable">国外进口</text>
                        <text class="lable">最多四字</text>
                        <text class="lable">最多三个</text>
                    </view>
                    <text class="sell-num m-l-20">已拼2550件</text>
                    <text class="go-group-buy">去拼团</text>
                </view>
            </block>
        </view>
    </scroll-view>
    <view class="round-backgroud">
        <view class="open-door bg-gradual-orange">
          开门
        </view>
    </view>
</view>


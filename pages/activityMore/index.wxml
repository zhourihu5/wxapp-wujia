<cu-custom  bgColor="titlebar-white" isBack="{{true}}">
    <view slot="backText"></view>
    <view slot="content">精选活动</view>
</cu-custom>
<view class="container p-l-r-30">
    <stepper step1Text="参与活动" step2Text="团购满减" step3Text="团购截至"
             step1Checked="{{true}}" step2Checked="{{true}}" step3Checked="{{true}}"/>

    <scroll-view scroll-y  class="scroll" style="top: calc( {{CustomBar}}px + 112rpx )"
                 bindscrolltoupper='scrolltoupper'
                 bindscrolltolower='scrolltolower'
                 lower-threshold="{{lowerThreshold}}"
    >
            <block wx:for="{{list}}" wx:key="">

<!--                <activity cover="{{item.cover}}"-->

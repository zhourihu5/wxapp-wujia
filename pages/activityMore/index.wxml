<!--                          salesNum="{{item.commodity.salesNum}}"-->
<!--                          dataId="{{item.id}}"/>-->

                                <view class="activity-item m-l-r-30 m-b-20 relative">
                                    <image class="activity-banner"
                                           src="{{item.cover}}"/>
                                    <view class="m-l-20 m-t-30 m-b-20 activity-title">卫生间纸巾盒免打孔厕所抽纸 1个{{index}}</view>
                                    <view class="price">
                                        <text class="dollar m-l-20">￥</text>
                                        <text class="price-integer">12</text>
                                        <text class="dot">.</text>
                                        <text class="price-float">32</text>

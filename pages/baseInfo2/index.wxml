<!--index.wxml-->
<cu-custom bgColor="titlebar-white" isBack="{{true}}">
    <view slot="backText"></view>
    <view slot="content">基本资料</view>
</cu-custom>
<view class="container">
    <view class="w-b">
        <view class="item">
            <view class="item-l">姓名</view>
            <input class="input" placeholder-class="placeholder" placeholder="请输入您的姓名"/>
        </view>
        <view class="item ">
            <view class="item-l">性别</view>
            <input class="input" placeholder-class="placeholder" placeholder="请输选择您的性别"/>
        </view>
        <view class="item">
            <view class="item-l"></view>
            <view class="item-r">
                <van-radio-group
                        value="{{ radio1 }}"
                        data-key="radio1"
                        class="demo-radio-group"
                        custom-class="demo-radio-group"
                        bind:change="onChange"
                >
                    <van-radio name="1" checkedColor="#FF951C" custom-class="demo-radio">女士</van-radio>
                    <van-radio name="2" checkedColor="#FF951C" custom-class="demo-radio">男士</van-radio>
                </van-radio-group>
            </view>
        </view>
        <view class="item ">
            <view class="item-l">手机号</view>
            <input class="input" placeholder-class="placeholder" placeholder="请输选择您的性别"
                   value="34534645636" disabled="disabled"/>
        </view>
        <view class="item no-border">
            <view class="item-l">生日</view>
            <input class="input" placeholder-class="placeholder" placeholder="请输选择您的生日"/>
        </view>
    </view>

</view>


<cu-custom bgColor="titlebar-white" isBack="{{true}}">
    <view slot="backText"></view>
    <view slot="content"><text class="{{navigationBarLoading?'wj-loading-icon':''}}"/>我的收货地址</view>
</cu-custom>
<view class="container">
    <scroll-view scroll-y class="scroll-view-adr" style="top: calc( {{CustomBar}}px + 20rpx )"
                 bindscrolltoupper='scrolltoupper'
                 bindscrolltolower='scrolltolower'
    >
        <block wx:for="{{apiData}}" wx:for-item="item" wx:key="">
            <view class="w-b">
                <view class="item-c {{index==0?'no-border':''}}" bindtap="itemClick" data-index="{{index}}">
                    <view class="item-c-l">
                        <view>{{item.address}}</view>
                        <view class="t-gray-b">{{item.name}}{{item.phone}}</view>
                    </view>
                    <view class="cuIcon-edit" bindtap="toEdit"></view>
                </view>

            </view>
        </block>

        <view class="b-b" bindtap="addNewAdress">
            <view class="cuIcon-roundadd icon-add"></view>
            <view class="xzshdz">新增收货地址</view>
        </view>

    </scroll-view>
</view>
